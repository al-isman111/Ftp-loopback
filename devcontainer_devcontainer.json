{
  "name": "Android App Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:latest",
  "features": {
    "ghcr.io/devcontainers-contrib/features/gradle:1": {},
    "ghcr.io/devcontainers-contrib/features/android-sdk:1": {
      "version": "34.0.0"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "sdkmanager 'platform-tools' 'platforms;android-34'",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-gradle",
        "vscjava.vscode-java-pack",
        "android-devtools.android",
        "ms-vscode.cpptools"
      ]
    }
  }
}